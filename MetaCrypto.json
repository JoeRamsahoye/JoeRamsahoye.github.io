{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Cryptocurrency Daily Returns",
      "subtitle": "Daily returns for 6 large market cap cryptocurrencies source: Binance.com ",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "black"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/JoeRamsahoye/JoeRamsahoye.github.io/main/ReturnsPlease.csv",
      "format": {"type": "csv"}
    },
    "selection": {
      "Cryptocurrency": {
        "type": "single",
        "fields": ["Cryptocurrency"],
        "bind": {
          "input": "select",
          "options": [
            null,
            "Bitcoin",
            "Ethereum",
            "Ripple",
            "Cardano",
            "Chainlink",
            "Dogecoin"
          ],
          "name": "Pick a Coin: "
        }
      }
    },
    "transform": [
      {"filter": {"selection": "Cryptocurrency"}},
      {
        "filter": {
          "field": "Cryptocurrency", 
          "oneOf": [
            "Bitcoin",
            "Ethereum",
            "Ripple",
            "Cardano",
            "Chainlink",
            "Dogecoin"
          ]
        }
      }
    ],
    "height": 300,
    "width": 1000,
    "mark": {"type": "point"},
    "encoding": {
      "x": {
        "field": "Date",
        "type": "temporal",
        "title": "Date",
        "axis": {"grid": false}
      },
      "y": {
        "field": "Return",
        "type": "quantitative",
        "title": "Daily Return (%)",
        "scale": {"domain": [-50, 100]},
        "axis": {"grid": false}
      },
      "color": {
        "field": "Cryptocurrency",
        "type": "nominal",
        "scale": {"scheme": "darkblue"},
        "title": null,
        "legend": {"orient": "top-right", "fillColor": "#ffffff"}
      },
      "tooltip": [
        {"field": "Cryptocurrency", "title": "Coin", "type": "ordinal"},
        {"field": "Date", "title": "Date", "type": "temporal"},
        {"field": "Return", "title": "Return (%)", "type": "quantitative"}
      ]
    }
  }