{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "UK average weekly Nitrogen Dioxide emissions",
    "title": {
        "text": "UK Nitrogen Dioxide",
        "subtitle": "Average weekly NO2 emissions. Source: emissions-api.org",
        "subtitleFontStyle": "italic",
        "subtitleFontSize": 10,
        "anchor": "start"
    },
    "data": {
        "url": "https://api.v2.emissions-api.org/api/v2/nitrogendioxide/statistics.json?country=GB&interval=week&end=2021-11-01",
        "format": { "type": "json" }
    },
    "height": 300,
    "width": 300,
    "mark": { "type": "line", "point": false, "color": "#f4c245" },
    "encoding": {
        "x": { "field": "time.interval_start", "title": "Date", "type": "temporal" },
        "y": {
            "field": "value.average",
            "title": "Emissions (mol/m2)",
            "type": "quantitative"
        }
    }

    