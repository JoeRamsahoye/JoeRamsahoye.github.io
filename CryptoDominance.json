{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://api.allorigins.win/raw?url=https://api.nomics.com/v1/currencies/ticker?key=m_c811a6982d88a3481b6baeb850f497236549ea69&ids&ids=BTC,ETH,XRP&interval=1d,30d&convert=EUR&platform-currency=ETH&per-page=10&page=1"
  },
  "title": {
    "text": " Chart 3: Market Dominance of Top Cryptocurrencies",
    "subtitle": " Percentage market dominance using Nomics API source: nomics.com",
    "subtitleFontStyle": "italic",
    "subtitleFontSize": 10,
    "anchor": "start",
    "color": "black"
  },
  "transform": [
    {
      "filter": {
        "field": "currency",
        "oneOf": ["BTC", "ETH", "XRP", "BNB", "ADA", "SOL", "USDT", "DOGE"]
      }
    }
  ],
  "config": {"background": "#e6edf0"},
  "height": 380,
  "width": "container",
  "mark": {
    "type": "arc",
    "innerRadius": 80,
    "stroke": "#2e2f2f",
    "tooltip": true
  },
  "encoding": {
    "theta": {"field": "market_cap_dominance", "type": "quantitative"},
    "color": {
      "field": "name",
      "title": "Cryptocurrency",
      "type": "nominal",
      "scale": {"scheme": "darkblue"},
      "sort": "ascending",
      "legend": {"orient": "left", "fillColor": "#e6edf0", "padding": 3}
    }
  }
}